<% if feed_item.votes_for == feed_item.votes_against %>
    <span class="votecount">-</span>
<% elsif feed_item.votes_for < feed_item.votes_against %>
    <span class="votecount" style= "line-height: 25px; color: white; background-color:#ca0000; border: 1px solid #ca0000; display:block; font-weight: bold;"><%= feed_item.votes_against - feed_item.votes_for %></span>
<% else %>
	<span class="votecount" style= "line-height: 25px; color: white; background-color:#46a546; border: 1px solid #46a546; display:block; font-weight: bold;"><%= feed_item.votes_for - feed_item.votes_against %></span>
<% end %>