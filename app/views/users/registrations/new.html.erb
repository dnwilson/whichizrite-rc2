<% provide(:title, 'Sign up') %>

<div class="signup-page">  
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "signup-form form-horizontal", :multipart => true }) do |f| %>
    <%= f.error_notification %>
    <div class="signup-header">
      <h2>Sign Up</h2>
      <p>Go ahead. It's free!</p>
    </div>
    
    <%= f.text_field :name, placeholder: "Full Name", :required => true, :autofocus => true %>
    
    <%= f.text_field :email, placeholder: "Your Email", :required => true %>
    <%= f.password_field :password, placeholder: "Password", :required => true %>
    <%= f.password_field :password_confirmation, placeholder: "Re-enter Password", :required => true %>

    <%= f.input :dob, label: false, placeholder: "Date of Birth", input_html: { id: 'datepicker', :required => true} %>

    <%= f.collection_radio_buttons(:sex, [['Male', 'Male',], ['Female', 'Female']], :first, :last, :required => true).html_safe do |b| b.label {b.text + b.radio_button } end %> 

    <p>By clicking Sign Up, you agree to our Terms and Conditions.</p>    

    <%= f.button :submit, "Sign up", class: "btn btn-large btn-primary" %>

    <%= render "shared/links" %>
  <% end %>
</div>