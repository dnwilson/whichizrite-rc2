<% provide(:title, 'Password') %>
<div class="user-edit-page row">
  <div class="user-edit-nav col-md-4">
    <ul class="nav nav-pills nav-stacked">
      <li class="<%= 'active' if current_page?(settings_path) %>">
        <%= link_to '<i class="icon-chevron-right"></i> Account'.html_safe, settings_path %>
      </li>
      <li class="<%= 'active' if current_page?(settings_password_path) %>">
        <%= link_to '<i class="icon-chevron-right"></i> Password'.html_safe, settings_password_path %>
      </li>
      <li class="<%= 'active' if current_page?(settings_privacy_path) %>">
        <%= link_to '<i class="icon-chevron-right"></i> Privacy'.html_safe, settings_privacy_path %>
      </li>
    </ul>
  </div>

	<div class="user-edit col-md-8">
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "password-edit form-horizontal", :multipart => true, :method => :put }) do |f| %>
			<%= devise_error_messages! %>
			<div class="edit-header">
				<h2>Password</h2>
				<p>Change your current password</p>
			</div>
			<%= f.input :current_password, label: "Current Password" %>
			<%= f.input :password, label: "New Password", :autocomplete => "off" %>
			<%= f.input :password_confirmation, label: "Confirmation" %>
			<div class="center">
				<%= f.submit "Update", class: "btn btn-large btn-primary" %>
			</div>	
		<% end %>
	</div>
</div>